<Window x:Class="WindmillHelix.Companion99.App.Settings.EditDiscord2LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindmillHelix.Companion99.App"
        mc:Ignorable="d"
        Title="Add/Edit Discord2Log Trigger" Height="304" Width="620">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <Label Content="Name:" Grid.Row="0" Grid.Column="0" />
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" />

        <Label Content="Discord Account:" Grid.Row="1" Grid.Column="0" />
        <ComboBox x:Name="DiscordAccountsComboBox" Grid.Row="1" Grid.Column="1" DisplayMemberPath="Name"/>

        <Label Content="Channel ID:" Grid.Row="2" Grid.Column="0" />
        <TextBox x:Name="ChannelIdTextBox" Grid.Row="2" Grid.Column="1" />

        <Label Content="Filter Regex:" Grid.Row="3" Grid.Column="0" />
        <TextBox x:Name="FilterRegexTextBox" Grid.Row="3" Grid.Column="1" />

        <Label Content="File Name:" Grid.Row="4" Grid.Column="0" />
        <TextBox x:Name="FileNameTextBox" Grid.Row="4" Grid.Column="1" />
        
        <Label Content="Remove Regex:" Grid.Row="5" Grid.Column="0" />
        <TextBox x:Name="RemoveRegexTextBox" Grid.Row="5" Grid.Column="1" />        
        
        <Label Content="Prefix:" Grid.Row="6" Grid.Column="0" />
        <TextBox x:Name="PrefixTextBox" Grid.Row="6" Grid.Column="1" />

        <Label Content="Enabled:" Grid.Row="7" Grid.Column="0" />
        <CheckBox x:Name="EnabledCheckBox" Grid.Row="7" Grid.Column="1"/>

        <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" Width="120" Grid.Row="8" Grid.Column="0"/>
        <Label Content="" x:Name="ErrorLabel" Foreground="Red" Grid.Row="8" Grid.Column="1" />
    </Grid>
</Window>
