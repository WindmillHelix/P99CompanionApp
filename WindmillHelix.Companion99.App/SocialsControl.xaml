<UserControl x:Class="WindmillHelix.Companion99.App.SocialsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindmillHelix.Companion99.App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="Character:"/>
            <ComboBox x:Name="CharacterComboBox" DisplayMemberPath="Display" SelectedValuePath="Value" Width="220px" />
        </StackPanel>
        <StackPanel Orientation="Vertical" x:Name="MainContainer" Grid.Row="1"/>
    </Grid>
</UserControl>
