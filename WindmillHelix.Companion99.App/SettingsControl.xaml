<UserControl x:Class="WindmillHelix.Companion99.App.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindmillHelix.Companion99.App"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="86"/>
            <ColumnDefinition Width="86"/>
            <ColumnDefinition Width="86"/>
        </Grid.ColumnDefinitions>
        <Button Click="DiscordIntegrationButton_Click" Margin="2" Grid.Row="0" Grid.Column="0">
            <StackPanel Margin="0" Orientation="Vertical" HorizontalAlignment="Center">
                <Image Source="Resources/Discord-Logo.png" Height="48" Width="48" />
                <TextBlock Height="16" Foreground="Black" HorizontalAlignment="Center">Discord</TextBlock>
            </StackPanel>
        </Button>
        <Button Click="MiddlemanButton_Click" Margin="2" Grid.Row="0" Grid.Column="1">
            <StackPanel Margin="0" Orientation="Vertical" HorizontalAlignment="Center">
                <Image Source="Resources/Middleman.png" Height="48" Width="48" />
                <TextBlock Height="16" Foreground="Black" HorizontalAlignment="Center">Middleman</TextBlock>
            </StackPanel>
        </Button>
        <Button Click="MapsButton_Click" Margin="2" Grid.Row="0" Grid.Column="2">
            <StackPanel Margin="0" Orientation="Vertical" HorizontalAlignment="Center">
                <Image Source="Resources/Map.png" Height="48" Width="48" />
                <TextBlock Height="16" Foreground="Black" HorizontalAlignment="Center">Maps</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
