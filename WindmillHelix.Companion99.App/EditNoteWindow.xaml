<Window x:Class="WindmillHelix.Companion99.App.EditNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindmillHelix.Companion99.App"
        mc:Ignorable="d"
        Title="EditNoteWindow" Height="150" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBox x:Name="NoteTextBox" Width="350" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="OKButton" Content="OK" Width="60px" Margin="5" Click="OKButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="60px" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
